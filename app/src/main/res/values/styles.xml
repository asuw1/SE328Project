<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_purple_dark</item>
        <item name="colorPrimaryDark">@color/primary_purple_dark</item>
        <item name="colorAccent">@color/accent_yellow</item>
        <item name="android:windowBackground">@drawable/purple_gradient_background</item>

        <!-- Set default font (Titillium Web) for all text -->
        <item name="android:fontFamily">@font/titillium_web</item>
        <item name="fontFamily">@font/titillium_web</item>
    </style>

    <!-- Heading styles with Exo 2 -->
    <style name="TextAppearance.App.Heading1" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/exo2</item>
        <item name="fontFamily">@font/exo2</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.Heading2" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/exo2</item>
        <item name="fontFamily">@font/exo2</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/exo2</item>
        <item name="fontFamily">@font/exo2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Body text with Titillium Web -->
    <style name="TextAppearance.App.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/titillium_web</item>
        <item name="fontFamily">@font/titillium_web</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/exo2</item>
        <item name="fontFamily">@font/exo2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>